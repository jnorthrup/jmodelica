    }
    
    public static final int IndexReductionBiPGraph.MAX_N_EQ_DIFFS = 5;
    public static final int IndexReductionBiPGraph.MAX_N_FEXP_IN_EQ = 10000;
    
    private void IndexReductionBiPGraph.differentiateVariable(IndexReductionVar var, Collection<FVariable> newDiffedVars, Collection<IndexReductionVar> varsToRemove) {
        if (var.getMeDifferentiated() != null)
            return;
        // Create a new differentiated variable
        FVariable diffedFVar = var.getVariable().createFDerivativeVariable();
        newDiffedVars.add(diffedFVar);
        // Add the differentiated variable to the graph 
        IndexReductionVar diffedVar = addVariable(diffedFVar.name(), diffedFVar);
        // a reference from the visited variable to its 
        // differentiated counterpart
        varsToRemove.add(var);
        var.setMeDifferentiated(diffedVar);
        diffedVar.setMeIntegrated(var);
    }
    
    public class IndexReductionFunctionInliner extends AbstractFunctionInliner {
        
        private final FClass fclass;
        private final FIndexReductionResolver resolver;
        private final Collection<FVariable> newVariables = new ArrayList<FVariable>();
        private final Collection<FAbstractEquation> newEquations = new ArrayList<FAbstractEquation>();
        private final Collection<FAbstractEquation> lastSplitFFCE = new ArrayList<FAbstractEquation>();
        private final boolean inlineEnabled;
        
        public IndexReductionFunctionInliner(FClass fclass) {
            this.resolver = fclass.dynamicResolver(new FIndexReductionResolver(fclass));
            this.fclass = fclass;
            inlineEnabled = fclass.root().options.getStringOption("inline_functions") != OptionRegistry.Inlining.NONE;
        }

        @Override
        protected String nextTempVarName() {
            return fclass.nextTempVarName();
        }

        @Override
        public boolean isInlinable(FFunctionDecl func) {
            if (inlineEnabled)
                return func.isTrivialInlinable(false);
            else
                return false;
        }

        @Override
        protected void addVar(FVariable var) {
            resolver.dynamicVariable(var);
            newVariables.add(var);
        }

        @Override
        protected void addEquation(FAbstractEquation eqn, FTypePrefixVariability variability) {
            resolver.dynamicEquation(eqn);
            newEquations.add(eqn);
        }

        @Override
        protected  FAbstractEquation handleInlinedFunctionCallEquation(FFunctionCallEquation original, Collection<FEquation> result2) {
            lastSplitFFCE.clear();
            for (FEquation eqn : result2) {
                lastSplitFFCE.add(eqn);
                resolver.dynamicEquation(eqn);
                newEquations.add(eqn);
            }
            return null;
        }

        public Collection<FVariable> getNewVariables() {
            return newVariables;
        }

        public Collection<FAbstractEquation> getNewEquations() {
            return newEquations;
        }

        public Collection<FAbstractEquation> getLastSplitFFCE() {
            return lastSplitFFCE;
        }
        
        public void reset() {
            newVariables.clear();
            newEquations.clear();
            lastSplitFFCE.clear();
        }
    }
    
    private void IndexReductionBiPGraph.differentiateEquation(IndexReductionEq eqn,
            Collection<FVariable> newDiffedVars,Collection<IndexReductionVar> varsToRemove,
            IndexReductionResult result, Stack<IndexReductionEq> eqToMatchStack,
            IndexReductionFunctionInliner inliner) {
        
        if (eqn.getMeDifferentiated() != null)
            return;
        
        FAbstractEquation fEqn = eqn.getEquation();
        
        if (eqn.numDifferentiations() > MAX_N_EQ_DIFFS)
            throw new IndexReductionException("Maximum number of differentiations has been reached");
        
        if (fEqn.numFExp() > MAX_N_FEXP_IN_EQ)
            throw new IndexReductionException("Maximum number of expressions in a single equation has been reached");
        
        for (IndexReductionEq member : eqn.getGroupMembers())
            if (member.getMatching() != null)
                differentiateVariable(member.getMatching(), newDiffedVars, varsToRemove);
        
        Collection<FAbstractEquation> diffedFEqns = fEqn.diff("time");
        if (diffedFEqns.size() != 1)
            throw new UnsupportedOperationException("Differentiation of equations should result" +
                    " in a single equation when differentiating on time");
        FAbstractEquation diffedFEqn = diffedFEqns.iterator().next();
        
        Collection<FAbstractEquation> newEquations = new ArrayList<FAbstractEquation>();
        Set<FAbstractEquation> splitOriginalFEqn = null;
        FAbstractEquation inlinedDiffedFEqn = diffedFEqn;
        
        if (inlinedDiffedFEqn.hasInlinableFunctions(inliner)) {
            inliner.reset();
            
            ASTNode.log.debug("Differentiated equation has inlinable functions");
            while (inlinedDiffedFEqn != null && inlinedDiffedFEqn.hasInlinableFunctions(inliner)) {
                ASTNode.log.debug("  Performing function inlining on %s", inlinedDiffedFEqn);
                inlinedDiffedFEqn = inlinedDiffedFEqn.inlineFunctions(inliner);
            }
            
            for (FVariable var : inliner.getNewVariables()) {
                newDiffedVars.add(var);
                if (var.variability().continuousVariability())
                    addVariable(var.name(), var);
            }
            
            ASTNode.log.debug("Inlining done, got %s", inlinedDiffedFEqn);
            newEquations.addAll(inliner.getNewEquations());
        }
        
        if (inlinedDiffedFEqn == null)
            splitOriginalFEqn = new HashSet<FAbstractEquation>(inliner.getLastSplitFFCE());
        else if (inlinedDiffedFEqn == diffedFEqn)
            newEquations.add(diffedFEqn);
        
        Collection<IndexReductionEq> diffedOriginalEqs = new ArrayList<IndexReductionEq>();
        
        // Go through all the new equations and add corresponding BiPGraph
        // equations. We need to remember equations that are differentiated
        // from the "orignal" equation so that we can add links later.
        for (FAbstractEquation newEqn : newEquations) {
            result.addEquation(newEqn);
            if (!newEqn.isContinuous())
                continue;
            // Sets that indicates the variables in the lhs and rhs.
            Set<IndexReductionVar> rhsVars = Collections.emptySet();
            Map<IndexReductionVar, Integer> lhsVars = Collections.emptyMap();
            if (newEqn.numScalarEquations() > 1) {
                rhsVars = lookupVarsInSet(newEqn.FIdUseExpsInRHS());
                lhsVars = new HashMap<IndexReductionVar, Integer>();
                int i = 0;
                for (IndexReductionVar var : lookupVarsInSet(newEqn.FIdUseExpsInLHS()))
                    lhsVars.put(var, i++);
                if (newEqn.lhsVarsAreSolved())
                    rhsVars.removeAll(lhsVars.keySet());
            }
            Collection<IndexReductionVar> variables = lookupVarsInSet(newEqn.findFIdUseExpsInTree());
            
            Collection<IndexReductionEq> members = new ArrayList<IndexReductionEq>();
            
            // Build new differentiated BiP equations for all group members.
            for (int i = 0; i < newEqn.numScalarEquations(); i++) { //IndexReductionEq member : eqn.getGroupMembers()) {
                ASTNode.log.info("About to add equation: %s", newEqn);
                // Add the differentiated equation
                IndexReductionEq diffedEqn = addEquation(newEqn, i, newEqn.variability());
                
                // Add edges
                for (IndexReductionVar var : variables) {
                    Integer pos = lhsVars.get(var);
                    if (var != null && (pos == null || pos == i || rhsVars.contains(var))) {
                        ASTNode.log.info("*** %s", var);
                        addEdge(diffedEqn, var);
                    }
                }
                members.add(diffedEqn);
                if (splitOriginalFEqn != null && splitOriginalFEqn.contains(newEqn) || newEqn == diffedFEqn)
                    diffedOriginalEqs.add(diffedEqn);
                else
                    eqToMatchStack.add(diffedEqn);
            }
            for (IndexReductionEq groupMember1 : members)
                for (IndexReductionEq groupMember2 : members)
                    groupMember1.addGroupMember(groupMember2);
            
            ASTNode.log.info("Equation added");
        }
        
        // Check so that the differentiated equation has the same number of
        // members as the original.
        if (eqn.getGroupMembers().size() != diffedOriginalEqs.size())
            throw new IndexReductionException("Number of scalar equations in differentiated equation(" + diffedOriginalEqs.size() + ") does not match the number in original equation(" + eqn.getGroupMembers().size() + "). Original equation:\n" + eqn.getEquation());
        
        Iterator<IndexReductionEq> eqnIt = eqn.getGroupMembers().iterator();
        Iterator<IndexReductionEq> diffedEqnIt = diffedOriginalEqs.iterator();
        // Add links between differentiated equation and the original equation.
        while (eqnIt.hasNext() && diffedEqnIt.hasNext()) {
            IndexReductionEq member = eqnIt.next();
            IndexReductionEq diffedMember = diffedEqnIt.next();
            // Set a reference from the visited equation to
            // its differentiated counterpart
            member.setMeDifferentiated(diffedMember);
            diffedMember.setMeIntegrated(member);
            
            if (member.getMatching() != null && !match(diffedMember, member.getMatching().getMeDifferentiated())) {
                eqToMatchStack.add(diffedMember);
            }
        }
    }
    
    public Set<FVariable> IndexReductionBiPGraph.removablePreferDerivatives(Set<FVariable> preferVars) {
        Set<FVariable> removableVars = new HashSet<FVariable>();
        for (FVariable preferVar : preferVars) {
            FVariable fDerVar = preferVar.getMeDifferentiated();
            if (fDerVar == null)
                continue;
            AbstractVar derVar = getVariable(fDerVar.name());
            if (derVar != null && derVar.getMatching() == null)
                removableVars.add(derVar.getVariable());
        }
        return removableVars;
    }

