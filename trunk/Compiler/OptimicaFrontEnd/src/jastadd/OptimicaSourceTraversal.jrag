aspect OptimicaSourceTraversal {

    syn Iterable<Constraint> ClassDecl.constraints();
    eq ClassDecl.constraints()    = Collections.<Constraint>emptyList();
    eq OptClassDecl.constraints() = new Iterable<Constraint>() {
        public Iterator<Constraint> iterator() {
            return new ClauseElementIterator<Constraint>() {
                protected Iterator<Constraint> subIterator(Clause c) {
                    return c.constraintIterator();
                }
            };
        }
    };

    syn Iterator<Constraint> Clause.constraintIterator() = null;
    eq ConstraintClause.constraintIterator()             = getConstraints().iterator();

}