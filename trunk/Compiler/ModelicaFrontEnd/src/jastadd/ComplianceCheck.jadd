	}
	
	
	public void InstAssignStmt.complianceCheck() {
		super.complianceCheck();
		if (getLeft().size().isUnknown() && !getRight().size().isUnknown()) {
			compliance("Assigning an expression of known size to an operand of unknown size is not supported");
		}
		if (!getLeft().size().isUnknown() && getRight().size().isUnknown()) {
			compliance("Assigning an expression of unknown size to an operand of known size is not supported");
		}
	}
	
