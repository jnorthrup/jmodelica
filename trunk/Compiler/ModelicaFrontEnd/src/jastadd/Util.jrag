    public SourceRoot ParserHandler.parseModelicaFile(String fileName) 
       throws ParserException, beaver.Parser.Exception, FileNotFoundException, IOException {
        SourceRoot sr = null;
        Reader reader = fileReader(fileName);
        AbstractModelicaScanner scanner = createModelicaScanner(new BufferedReader(reader));
        beaver.Parser parser = createModelicaParser(scanner);
        sr = (SourceRoot) parser.parse(scanner);
        sr.setFileName(fileName);
        sr.setFormatting(scanner.getFormattingInfo());
        reader.close();
        return sr;
    }
    
    public SourceRoot ParserHandler.parseModelicaString(String str, String fileName) 
       throws ParserException, beaver.Parser.Exception, FileNotFoundException, IOException {
        SourceRoot sr = null;
        AbstractModelicaScanner scanner = createModelicaScanner(new StringReader(str));
        beaver.Parser parser = createModelicaParser(scanner);
        sr = (SourceRoot) parser.parse(scanner);
        sr.setFileName(fileName);
        sr.setFormatting(scanner.getFormattingInfo());
        return sr;
    }
    
    public Exp ParserHandler.parseModelicaExpString(String str)
       throws ParserException, beaver.Parser.Exception, FileNotFoundException, IOException {
        Exp exp = null;
        AbstractModelicaScanner scanner = createModelicaScanner(new StringReader(str));
        beaver.Parser parser = createModelicaParser(scanner);
        exp = (Exp) parser.parse(scanner, expModelicaGoal());
        //log.debug("ModelicaParser.parseExpString: "+str);
        //exp.dumpTreeBasic("");
        return exp;
    }
    
    public static Reader ParserHandler.fileReader(File file) throws FileNotFoundException {
		FileInputStream stream = new FileInputStream(file);
		try {
			return new InputStreamReader(stream, "UTF-8");
		} catch (UnsupportedEncodingException e) {
		}
		return new InputStreamReader(stream);
    }
    
    public static Reader ParserHandler.fileReader(String path) throws FileNotFoundException {
		return fileReader(new File(path));
    }
    
}

