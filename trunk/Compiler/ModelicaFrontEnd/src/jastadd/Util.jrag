        int i = 0;
        int last = getNumFQNamePart() - 1;
        String sep = "";
        for (FQNamePart part : getFQNameParts()) {
        	str.append(sep);
        	sep = "_";
        	str.append(part.getName());
        	if ((i < last || isScalarized()) && part.hasFArraySubscripts()) {
