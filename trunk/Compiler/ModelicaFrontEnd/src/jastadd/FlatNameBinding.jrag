aspect FlatNameBinding {
	
	inh FAbstractVariable FIdUse.lookupFV(FQName fqn);
	inh FAbstractVariable FIdUse.lookupDerFV(FQName fqn);
	inh FAbstractVariable FExp.lookupFV(FQName fqn);
	inh FAbstractVariable FAbstractVariable.lookupFV(FQName fqn);
	inh FAbstractVariable FRecordDecl.lookupFV(FQName fqn);
	
	syn FAbstractVariable FIdUse.myFV() = lookupFV(getFQName());
	syn lazy FAbstractVariable FIdUseExp.myFV() = getFIdUse().myFV();
	eq FDerExp.myFV() = getFIdUse().lookupDerFV(getFIdUse().getFQName());
	eq FDummyDerExp.myFV() = getFIdUse().lookupDerFV(getFIdUse().getFQName());
    
	eq Root.getChild().lookupFV(FQName fqn)    = null;
	eq Root.getChild().lookupDerFV(FQName fqn) = null;

	eq FClass.getChild(int index).lookupFV(FQName fqn)    = lookupFV(fqn, false);
	eq FClass.getChild(int index).lookupDerFV(FQName fqn) = lookupFV(fqn, true);
	
	public FAbstractVariable FClass.lookupFV(FQName fqn, boolean der) {
		boolean scalar = fqn.scalarized;
		fqn.scalarized = scalarized;
		FAbstractVariable variable = lookupFVFromMap(fullyQualifiedVariablesMap(), fqn, der, true);
		fqn.scalarized = scalar;
		return (variable == null) ? unknownFVariable() : variable;
	}

	private Map<String,FVariable> FFunctionDecl.tempLookupMap = null;
	
	eq FFunctionDecl.getChild(int index).lookupFV(FQName fqn) {
		FAbstractVariable variable = null;
		if (tempLookupMap != null)
			variable = lookupFVFromMap(tempLookupMap, fqn, false, false);
		if (variable == null)
			variable = lookupFVFromMap(fullyQualifiedVariablesMap(), fqn, false, false);
		return (variable == null) ? unknownFVariable() : variable;
	}

	eq FRecordDecl.getChild(int index).lookupFV(FQName fqn) {
		FAbstractVariable variable = lookupFVInRecord(fqn, 0);
		return (variable == null) ? lookupFV(fqn) : variable;
	}
	
	public static FAbstractVariable ASTNode.lookupFVFromMap(
			Map<String, ? extends FAbstractVariable> map, FQName fqn, boolean der, boolean resolve) {
		String name = fqn.prefixName(0, der, resolve);
		FAbstractVariable variable = map.get(name);
		int i = fqn.getNumFQNamePart();
		while (variable == null && i > 1) {
			i--;
			// Only last part should have "der()", and it isn't included here
			String part = fqn.prefixName(i, false, resolve);
			FAbstractVariable tmp = map.get(part);
			if (tmp != null) 
				// TODO: shouldn't we support der here?
				variable = tmp.lookupFVInRecord(fqn, i);
		}
		return variable;
	}
	
	public FAbstractVariable FRecordDecl.lookupFVInRecord(FQName fqn, int part) {
		FAbstractVariable res = null;
		for (FVariable fv : getFVariables())
			if (fv.name().equals(fqn.getFQNamePart(part).getName()))
				res = fv;
		return res;
	}
	
	public FAbstractVariable FAbstractVariable.lookupFVInRecord(FQName fqn, int part) {
		FRecordDecl rec = myFRecordDecl();
		FAbstractVariable res = (rec != null) ? rec.lookupFVInRecord(fqn, part) : null;
		if (part < fqn.getNumFQNamePart() - 1 && res != null)
			res = res.lookupFVInRecord(fqn, part + 1);
		return res;
	}
	
	inh FAbstractVariable FForClauseE.lookupFV(FQName fqn);
	eq FForClauseE.getChild().lookupFV(FQName fqn) {
		String name = fqn.name();
		for (FForIndex fi : getFForIndexs()) {
			if (fi.getFVariable().name().equals(name)) {
				return fi.getFVariable();
			}
		}
		return lookupFV(fqn);
	}
	
	inh FAbstractVariable FForStmt.lookupFV(FQName fqn);
	eq FForStmt.getChild().lookupFV(FQName fqn) {
		String name = fqn.name();
		FVariable index = getIndex().getFVariable();
		if (index.name().equals(name)) 
			return index;
		return lookupFV(fqn);
	}
	
	inh FAbstractVariable FIterExp.lookupFV(FQName fqn);
	eq FIterExp.getChild().lookupFV(FQName fqn) {
		String name = fqn.name();
		for (CommonForIndex fi : getForIndexs()) {
			if (fi instanceof FForIndex) {
				FForIndex ffi = (FForIndex) fi;
				if (ffi.getFVariable().name().equals(name)) 
					return ffi.getFVariable();
			}
		}
		return lookupFV(fqn);
	}
	
