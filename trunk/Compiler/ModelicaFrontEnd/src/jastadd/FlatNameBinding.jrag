aspect FlatPreBinding {

	inh FAbstractVariable FIdUse.lookupPreFV(FQName fqn);	
	inh FAbstractVariable FExp.lookupPreFV(FQName fqn);	
	syn FAbstractVariable FPreExp.myFV() {
		if (getFExp() instanceof FIdUseExp) {
		    //System.out.println("FPreExp.myFV(): " + name());
			return ((FIdUseExp)getFExp()).lookupPreFV(((FIdUseExp)getFExp()).getFIdUse().getFQName());
    	} else {
    		return unknownFVariable();
    	}
    }
    
	eq Root.getChild().lookupPreFV(FQName fqn) = null;

	eq FClass.getChild(int index).lookupPreFV(FQName fqn) = lookupPreFV(fqn);
	
	public FAbstractVariable FClass.lookupPreFV(FQName fqn) {
		boolean scalar = fqn.scalarized;
		fqn.scalarized = scalarized;
		FAbstractVariable variable = lookupPreFVFromMap(fullyQualifiedVariablesMap(), fqn);
		//System.out.println("FClass.lookupPreFV(): " + fqn.name());
		fqn.scalarized = scalar;
		return (variable == null) ? unknownFVariable() : variable;
	}

	public static FAbstractVariable ASTNode.lookupPreFVFromMap(
		Map<String, ? extends FAbstractVariable> map, FQName fqn) {
		FAbstractVariable variable = map.get(fqn.preName());
		//System.out.println(map.toString());
		return variable;
	}

}

aspect FlatHDerBinding {

	inh FAbstractVariable FIdUse.lookupHDerFV(FQName fqn, int order);	
	inh FAbstractVariable FExp.lookupHDerFV(FQName fqn, int order);	
	syn FAbstractVariable FHDerExp.myFV() {
		return getFIdUse().lookupHDerFV(getFIdUse().getFQName(),getOrder());
    }

	syn FAbstractVariable FHDummyDerExp.myFV() {
		return getFIdUse().lookupHDerFV(getFIdUse().getFQName(),getOrder());
    }
    
	eq Root.getChild().lookupHDerFV(FQName fqn, int order) = null;

	eq FClass.getChild(int index).lookupHDerFV(FQName fqn, int order) = lookupHDerFV(fqn, order);
	
	public FAbstractVariable FClass.lookupHDerFV(FQName fqn, int order) {
		boolean scalar = fqn.scalarized;
		fqn.scalarized = scalarized;
		FAbstractVariable variable = lookupHDerFVFromMap(fullyQualifiedVariablesMap(), fqn, order);
		//System.out.println("FClass.lookupPreFV(): " + fqn.name());
		fqn.scalarized = scalar;
		return (variable == null) ? unknownFVariable() : variable;
	}

	public static FAbstractVariable ASTNode.lookupHDerFVFromMap(
		Map<String, ? extends FAbstractVariable> map, FQName fqn, int order) {
		String[] str = fqn.derName().split("\\)");
		FAbstractVariable variable = map.get(str[0] + "," + order + ")");
		//System.out.println(map.toString());
		return variable;
	}

}

