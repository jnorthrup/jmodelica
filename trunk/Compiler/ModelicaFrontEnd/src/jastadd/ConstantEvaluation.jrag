	syn lazy CValue InstAssignable.startAttributeCValue() = CValue.UNKNOWN;
	
	eq InstPrimitive.startAttributeCValue() {
		for (InstModification im : totalMergedEnvironment()) {
			FExp exp = im.findStartAttribute();
			if (exp != null)
				return exp.ceval();
		}
		
		// Default value
		CValue res = CValue.UNKNOWN;
		if (isReal())
			res = new CValueReal(0.0);
		else if (isInteger())
			res = new CValueInteger(0);
		else if (isBoolean())
			res = new CValueBoolean(false);
		else if (isString())
			res = new CValueString("");
		if (isArray()) {
			CValueArray array = new CValueArray(size());
			for (Index i : indices())
				array.setCell(i, res);
