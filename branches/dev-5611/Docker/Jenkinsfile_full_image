
node('docker') {
    def jm_image
    stage("Checkout JModelica.org") {
        checkout([
            $class: 'SubversionSCM',
            locations: [
            [local: 'JModelica', remote: scm.getLocations()[0].remote],
        ],
            workspaceUpdater: [$class: 'UpdateWithCleanUpdater'],
            quietOperation: true,
        ])
    }
    stage ("Checkout SCM") {
        checkout scm
    }
    stage ('Build') {
        def dockerfile = 'Dockerfile_full_image'
        jm_image = docker.build("jmodelica-image", "-f ${dockerfile} . --build-arg DOCKER_LINUX_DIST=jmodelica/ubuntu_base --build-arg DOCKER_DIST_TAG=latest")
        
        jm_image.inside{
            sh 'echo "Finished building"'
        }
    }
    
    
}