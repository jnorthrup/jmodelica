<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="true"
            class="org.jmodelica.devel.addtest.AddTestFactory"
            locationURI="popup:org.jmodelica.ide.editor.EditorContext?after=additions">
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu?after=project">
         <menu
               id="org.jmodelica.devel.menu"
               label="JModelica"
               mnemonic="J">
            <command
                  commandId="org.jmodelica.devel.command.setupproj"
                  id="org.jmodelica.devel.menu"
                  label="Setup Projects"
                  mnemonic="S"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.jmodelica.devel.command.addtest"
            name="Select Type...">
         <commandParameter
               id="org.jmodelica.devel.parameter.addtest.type"
               name="Type"
               optional="true">
         </commandParameter>
         <commandParameter
               id="org.jmodelica.devel.parameter.addtest.offset"
               name="Offset"
               optional="true">
         </commandParameter>
      </command>
      <command
            id="org.jmodelica.devel.command.setupproj"
            name="Setup Projects">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.jmodelica.devel.addtest.AddTestHandler"
            commandId="org.jmodelica.devel.command.addtest">
      </handler>
      <handler
            class="org.jmodelica.devel.setup.SetupProj"
            commandId="org.jmodelica.devel.command.setupproj">
      </handler>
   </extension>
</plugin>
