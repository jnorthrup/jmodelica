aspect OptimicaCCodeGen {
	
	@Override
	public void FTimedVariable.prettyPrint_C(CodePrinter p, CodeStream str, String indent) {
		if (getName().myFV().isReal() && myOptions().getBooleanOption("enable_variable_scaling") && !inFunction()) {
			str.print("(");
			str.print(getName().name_C()+"_p_(" + 
					myFOptClass().timePointIndex(getArg().ceval().realValue()) + ")");
			str.print("*sf(");
			str.print(getName().myFV().valueReference());
			str.print("))");
		} else {
			str.print(getName().name_C()+"_p_(" + 
					myFOptClass().timePointIndex(getArg().ceval().realValue()) + ")");
		}		
	}

	public void FConstraintEq.genResidual_C(int i, String indent, CodeStream str) {
		str.print(indent + "(*res)[" + i + "] = ");
		getRight().prettyPrint_C(str,"");
		str.print(" - (");
		getLeft().prettyPrint_C(str,"");
		str.print(");\n");
	}

	public void FConstraintLeq.genResidual_C(int i, String indent, CodeStream str) {
		str.print(indent + "(*res)[" + i + "] = ");
		getLeft().prettyPrint_C(str,"");
		str.print(" - (");
		getRight().prettyPrint_C(str,"");
		str.print(");\n");
	}

	public void FConstraintGeq.genResidual_C(int i, String indent, CodeStream str) {
		str.print(indent + "(*res)[" + i + "] = ");
		getRight().prettyPrint_C(str,"");
		str.print(" - (");
		getLeft().prettyPrint_C(str,"");
		str.print(");\n");
	}
	
	eq FTimed.genJMIVariabilityConstant_C() = "JMI_CONTINUOUS_VARIABILITY";
	eq FOptParameter.genJMIVariabilityConstant_C() = "JMI_CONTINUOUS_VARIABILITY";
}


