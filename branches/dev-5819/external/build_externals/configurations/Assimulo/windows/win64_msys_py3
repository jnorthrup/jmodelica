# mkfile_path is the path to this file
mkfile_path := $(abspath $(lastword $(MAKEFILE_LIST)))
mkfile_dir := $(dir $(mkfile_path))
include $(mkfile_dir)/win
TARGET=Assimulo
BITNESS=64
FORCE_32_BIT=false
EXTRA_SETUP_ARGS=--no-msvcr=true --with_openmp=True

SUPERLU_HOME=$(BUILD_DIR)/superlu_build$(BITNESS)
SUNDIALS_HOME=$(BUILD_DIR)/sundials_install$(BITNESS)
BLAS_HOME=$(BUILD_DIR)/blas_install$(BITNESS)
LAPACK_HOME=$(BUILD_DIR)/lapack_install$(BITNESS)
INSTALL_DIR_FOLDER=$(BUILD_DIR)/$(TARGET)$(BITNESS)$(SUFFIX)
SUFFIX=_py2
REMOVE_PREINSTALL_DIR=yes
PREINSTALL_DIR=$(BUILD_DIR)/$(TARGET)$(BITNESS)$(SUFFIX)

PYTHONHOME=$(WORKSPACE)/Python27/Python_64/
