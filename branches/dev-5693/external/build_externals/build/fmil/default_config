PLATFORM=ubuntu
DIST_VERSION=18.04
PYTHON_VERSION=3.5.5
BUILD_TARGET=PyFMI
DOCKER_ENV=1
BITNESS=64

JM_HOME_IN_DOCKER=/tmp/jm_home
BUILD_ENVIRONMENT=${JM_HOME}/build_environment
BUILD_EXTERNALS_DIR=${JM_HOME}/external/build_externals
BUILD_DIR=${JM_HOME}/build
FMIL_BUILD_DIR=${BUILD_DIR}/fmil
FMIL_INSTALL=${BUILD_DIR}/fmil_install

