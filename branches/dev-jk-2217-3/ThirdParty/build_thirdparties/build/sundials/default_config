BUILD_DIR=${SDK_HOME}/build
JM_HOME=${SDK_HOME}/src
SUNDIALS_BUILD_DIR=${BUILD_DIR}/build_sundials
SUNDIALS_C_FLAGS="-m64 -fPIC"
SUNDIALS_INSTALL_DIR=${BUILD_DIR}/sundials_install
SUNDIALS_SRC_DIR=${JM_HOME}/ThirdParty/Sundials/sundials-2.7.0

SUPERLU_INSTALL=${BUILD_DIR}/superlu_install
SUPERLU_ADDON=-DSUPERLUMT_THREAD_TYPE=OpenMP -DSUPERLUMT_ENABLE=ON -DSUPERLUMT_LIBRARY_DIR=$(SUPERLU_INSTALL)/lib -DSUPERLUMT_INCLUDE_DIR=$(SUPERLU_INSTALL)/SRC