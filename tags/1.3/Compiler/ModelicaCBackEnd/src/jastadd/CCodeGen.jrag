	public void FRecordDecl.prettyPrint_C(Printer p, PrintStream str, String indent, Object o) {
		// Record type (struct)
		str.print(indent);
		str.print("typedef struct _");
		str.print(name_C());
		str.print(" {\n");
		String next = p.indent(indent);
		for (FVariable fv : getFVariables())
