#
if CppAD_BOOSTVECTOR
BOOST_INCLUDE = -I$(BOOST_DIR)
else
BOOST_INCLUDE =
endif
#
noinst_PROGRAMS  = adolc 
#
AM_CPPFLAGS   = -I$(top_srcdir) -I$(ADOLC_DIR)/include $(BOOST_INCLUDE)
#
# BEGIN OPTIMIZE
